    background-color: #ddd;
}

         </style>
            <div id="table1" class="containe" style="background-color: white">
                <h1 style="text-align: center;">Allocated Hall</h1>
                <table style="width: 50vw; margin: auto;">
                    <thead>
                        <tr>
                            <th>Hall Name</th>
                            <th>Capacity</th>

                            <th>Department</th>
                            <th>Course Code</th>
                            <th>Number of students</th>
                            <th>Level</th>
                            <th> Date</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: #ddd;">
                        <% if (allocations && allocations.hall) { %>
                            <tr>
                                <td><%= allocations.hall.hallName %></td>
                                <td><%= allocations.hall.capacity %></td>
                                <td><%= allocations.department %></td>
                                <td><%= allocations.courseCode %></td>
                                <td><%= allocations.students %></td>
                                <td><%= allocations.level %></td>
                                <td><%= new Date(allocations.allocatedAt).toLocaleDateString()%></td>
                            </tr>
                        <% } else { %>
                            <tr>
                                <td colspan="3">No allocations available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
        

  
 

</body>
